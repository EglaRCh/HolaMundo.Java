pipeline {
    agent any

    stages {
        stage('Clone') {
            steps {
                git 'https://github.com/EglaRCh/HolaMundo.java.git'
            }
        }
        stage('Build') {
            steps {
                sh 'javac HolaMundo.java'
            }
        }
        stage('Package') {
            steps {
                sh 'jar cfe HolaMundo.jar HolaMundo HolaMundo.class'
                archiveArtifacts artifacts: 'HolaMundo.jar', fingerprint: true
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    def app = docker.build("holamundo-java-app:${env.BUILD_ID}")
                    docker.withRegistry('', 'dockerhub-credentials') {
                        app.push("${env.BUILD_ID}")
                        app.push("latest")
                    }
                }
            }
        }
    }
}
