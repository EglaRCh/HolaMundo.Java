pipeline {
    agent any
    environment {
        BASE_IMAGE_NAME = 'java-base'
        APP_IMAGE_NAME = 'java-app'

    stages {
        stage('Declarative: Checkout SCM'){
            steps{
                checkout scm
                }
            }
        stage('Clone') {
            steps {
                git 'https://github.com/EglaRCh/HolaMundo.java.git'
            }
        }
        stage('Build Imagen Base') {
            steps {
                script {
                    docker.build("${BASE_IMAGE_NAME}", '-f Dockerfile.base .')
                    }
                }
            }
        stage('Compilar Aplicaci贸n app_java'){
            steps {
                script {
                    //sh 'mkdir -p target'
                    sh 'javac -d target src/HolaMundo.java'
                    }
                }
            }
        stage('Empaquetar Aplicaci贸n') {
            steps{
                script{
                    sh 'jar cfm target/HolaMundo.jar target/MANIFEST.MF -C target .'
                    sh 'jar tf target/HolaMundo.jar'
                    }
                }
            }
        stage('Construir Imagen de la Aplicaci贸n') {
            steps {
                script {
                    docker.build("${APP_IMAGE_NAME}", '.')
                }
            }
        }

        stage('Ejecutar la Aplicaci贸n') {
            steps {
                script {
                    sh "docker run --rm ${APP_IMAGE_NAME}"
                    //sh 'java -cp target/HolaMundo.jar HolaMundo'
                }
            }
        }
    }
    post {
        always {
            script {
                sh 'docker images'
            }
        }
    }
}
